{
  "name": "kotosani",
  "version": "1.0.0",
  "description": "Первое в Сочи антикафе с котиками",
  "main": "app.js",
  "author": "ollejah <ollejah@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --watch webpack.config.js --exec 'webpack-dev-server --env development --inline --hot'",
    "test": "cypress open",
    "build": "webpack --env production --progress --hide-modules",
    "build:start": "yarn build && node scripts/server.js",
    "build:test": "yarn build:start --test",
    "deploy": "yarn build && node scripts/upload.js",
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "preversion": "node ./scripts/merge.js && node ./scripts/version-changelog.js",
    "version": "rimraf ./dist/* && npm run build && git add .",
    "postversion": "git push origin && git push origin --tags && git rebase master develop",
    "merge:master": "node ./scripts/merge.js && git push origin",
    "merge:develop": "git rebase master develop && git push origin",
    "stage:build": "rimraf ./dist/* && yarn build --stage",
    "stage:start": "yarn stage:build && node scripts/server.js --stage",
    "stage:test": "yarn stage:start --test",
    "stage:deploy": "yarn stage:build && push-dir --dir=dist --branch=gh-pages --cleanup"
  },
  "dependencies": {
    "blazy": "^1.8.2",
    "smoothscroll-polyfill": "^0.4.0",
    "stickyfilljs": "^2.0.2"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.1",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "css-mqpacker": "^6.0.2",
    "cypress": "3.0.1",
    "dotenv": "^5.0.1",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "json-loader": "^0.5.7",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.8.3",
    "offline-plugin": "^5.0.3",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.3",
    "preload-webpack-plugin": "^3.0.0-alpha.3",
    "push-dir": "^0.4.1",
    "resource-hints-webpack-plugin": "^0.0.2",
    "sass-loader": "^6.0.7",
    "sharp": "^0.20.2",
    "spdy": "^3.4.7",
    "style-loader": "^0.20.3",
    "svg-inline-loader": "^0.8.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "url-loader": "^1.0.1",
    "vinyl-fs": "^3.0.2",
    "vinyl-ftp": "^0.6.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.4",
    "webpack-manifest-plugin": "^2.0.2"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Edge >= 12",
    "Explorer >= 11",
    "iOS >= 7",
    "Safari >= 7",
    "Android >= 4"
  ],
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false
  }
}
